development: &defaults
  adapter: mysql2
  encoding: utf8
  database: <%= node[:rails][:app_name] %>_dev
  username: <%= node[:rails][:db_user] %>
  password: <%= node[:rails][:db_pass] %>
  socket: /var/run/mysqld/mysqld.sock
  pool: 5
  timeout: 5000

test: &test
  adapter: mysql2
  encoding: utf8
  database: <%= node[:rails][:app_name] %>_test
  username: <%= node[:rails][:db_user] %>
  password: <%= node[:rails][:db_pass] %>
  socket: /var/run/mysqld/mysqld.sock
  pool: 5
  timeout: 5000

cucumber:
  <<: *test
